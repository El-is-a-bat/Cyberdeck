{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "cyberdeck",
    "version": "0.1.0",
    "identifier": "cyberdeck",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "cyberdeck",
                "alwaysOnTop": true,
                "fullscreen": false,
                "center": true,
                "decorations": false,
                "resizable": true,
                "focus": true,
                "transparent": true,
                "width": 450,
                "height": 300
            }
        ],
        "security": {
            "assetProtocol": {
                "enable": true,
                "scope": {
                    "requireLiteralLeadingDot": false,
                    "allow": [
                        "**/*"
                    ]
                }
            },
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
